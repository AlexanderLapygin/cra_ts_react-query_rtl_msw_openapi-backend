{
  "openapi": "3.0.2",
  "info": {
    "title": "ToDo Service API",
    "description": "API used as sample during the Blog Posts series talking about API Design.",
    "version": "1.0.0",
    "contact": {
      "email": "alexanderlapygin@gmail.com",
      "name": "Alexander Lapygin",
      "url": "https://github.com/AlexanderLapygin"
    },
    "license": {
      "name": "MIT",
      "url": "https://raw.githubusercontent.com/nicolastakashi/todoapp-openapidocuments/master/LICENSE"
    }
  },
  "servers": [
    {
      "url": "http://127.0.0.1:4010",
      "description": "Mock Server"
    }
  ],
  "tags": [
    {
      "name": "Authentication"
    },
    {
      "name": "CRUD"
    }
  ],
  "paths": {
    "/tasks": {
      "get": {
        "operationId": "getTasks",
        "summary": "Returns a paged list of tasks.",
        "description": "Returns a paged list of tasks",
        "tags": [
          "CRUD"
        ],
        "parameters": [
          {
            "in": "query",
            "description": "Desired page",
            "name": "page",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1,
              "minimum": 1
            }
          },
          {
            "in": "query",
            "description": "Desired quantity of itens per page",
            "name": "pageSize",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 10,
              "minimum": 10,
              "maximum": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PagedTask"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected error"
          }
        }
      },
      "post": {
        "operationId": "createTask",
        "summary": "Create a task",
        "description": "Create a new task",
        "tags": [
          "CRUD"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Task"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "headers": {
              "Location": {
                "description": "Location of the created task /tasks/{id}",
                "example": "http://127.0.0.1:4010/tasks/0301f2cb-0a7f-c41f-aa7a-da9b8ba2f1bb",
                "schema": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected error"
          }
        }
      }
    },
    "/tasks/{id}": {
      "get": {
        "operationId": "getTask",
        "summary": "Get task by id",
        "description": "Return a task",
        "tags": [
          "CRUD"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "Task id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          },
          "404": {
            "description": "Task not found",
            "content": {}
          },
          "500": {
            "description": "Unexpected error"
          }
        }
      },
      "put": {
        "operationId": "updateTask",
        "summary": "Update a task",
        "description": "Update a task",
        "tags": [
          "CRUD"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "Task id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Task"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Task not found",
            "content": {}
          },
          "500": {
            "description": "Unexpected error"
          }
        }
      },
      "delete": {
        "operationId": "deleteTask",
        "summary": "Delete a task",
        "description": "Delete a task",
        "tags": [
          "CRUD"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "Task id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "500": {
            "description": "Unexpected error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Task": {
        "type": "object",
        "required": [
          "designation"
        ],
        "properties": {
          "id": {
            "description": "Task unique identifier",
            "type": "string",
            "format": "uuid",
            "readOnly": true
          },
          "designation": {
            "description": "Task name",
            "type": "string",
            "example": "technology"
          }
        }
      },
      "PagedTask": {
        "type": "object",
        "properties": {
          "total": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "totalOfPages": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "values": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Task"
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "type": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
